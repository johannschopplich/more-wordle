{
  "name": "wordle-pwa",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.10.2",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,mjs,ts,vue,yml}\" --write",
    "format:check": "prettier \"**/*.{css,html,json,md,mjs,ts,vue,yml}\" --check",
    "test:types": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.3",
    "@byjohann/ui": "^0.6.2",
    "@iconify-json/teenyicons": "^1.1.8",
    "@nuxtjs/i18n": "8.0.0-rc.4",
    "@types/node": "^20.10.4",
    "@unocss/eslint-config": "^0.58.0",
    "@unocss/nuxt": "^0.58.0",
    "@unocss/preset-wind": "^0.58.0",
    "@unocss/reset": "^0.58.0",
    "@vueuse/nuxt": "^10.7.0",
    "eslint": "^8.55.0",
    "klona": "^2.0.6",
    "lint-staged": "^15.2.0",
    "nuxt": "^3.8.2",
    "nuxt-api-party": "^0.22.2",
    "prettier": "^3.1.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "unocss": "^0.58.0",
    "vue-tsc": "^1.8.25"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache"
  }
}
