{
  "name": "wordle-pwa",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,mjs,ts,vue,yml}\" --write",
    "format:check": "prettier \"**/*.{css,html,json,md,mjs,ts,vue,yml}\" --check",
    "test:types": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@byjohann/ui": "^0.9.1",
    "@iconify-json/teenyicons": "^1.2.0",
    "@nuxtjs/i18n": "8.0.0-rc.4",
    "@types/node": "^22.7.4",
    "@unocss/eslint-config": "^0.63.3",
    "@unocss/nuxt": "^0.63.3",
    "@unocss/preset-wind": "^0.63.3",
    "@unocss/reset": "^0.63.3",
    "@vueuse/nuxt": "^11.1.0",
    "eslint": "^9.12.0",
    "klona": "^2.0.6",
    "lint-staged": "^15.2.10",
    "nuxt": "^3.13.2",
    "nuxt-api-party": "^2.0.10",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "unocss": "^0.63.3",
    "vue-tsc": "^2.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache"
  }
}
